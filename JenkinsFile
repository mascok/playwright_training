pipeline {
    agent any

    tools {
        nodejs 'NodeJS 24'
    }

    environment {
        HOME = "${env.WORKSPACE}"
    }

    stages {
        // stage('Build') {
        //     steps {
        //         // misal generate HTML report di folder html-report
        //         sh 'mkdir -p html-report'
        //         sh 'echo "<h1>Hello World</h1>" > html-report/index.html'
        //     }
        // }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Install Browsers') {
            steps {
                sh 'npx playwright install --with-deps'
            }
        }

        stage('Run Playwright Tests transaction') {
            steps {
                sh 'npx playwright test --grep @happyFlow'
            }
        }

        // stage('Cek folder') {
        //     steps {
        //         sh '''
        //             cd playwright-report
        //             ls -al
        //             cat index.html
        //         '''
        //     }
        // }
    }

    post {
        always {
            publishHTML([
                allowMissing: false, 
                alwaysLinkToLastBuild: true, 
                keepAll: true, 
                reportDir: '**/playwright-report', 
                reportFiles: 'index.html', 
                reportName: 'Lihat Report disini boss', 
                reportTitles: '', 
                useWrapperFileDirectly: false])
        }
    }
}
